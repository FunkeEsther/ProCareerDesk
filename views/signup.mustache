<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - ProCareerDesk</title>
    <link rel="stylesheet" href="/css/signup.css">

</head>
<body>
    <header>
        <a href="/" class="logo">ProCareerDesk</a>
        <nav>
            <a href="/login">Login</a> | <a href="/signup">Sign Up</a>
        </nav>
    </header>

    <section>
        <form action="/student/signup" method="post">
            <h2>Student Signup</h2>
            {{#studentErrorMessage}}
                <p style="color: red;">{{studentErrorMessage}}</p>
            {{/studentErrorMessage}}
            <div class="form-row">
                <div class="form-column">
                    <label for="studentFirstName">First Name:</label>
                    <input type="text" id="studentFirstName" name="firstName" required class="{{#studentErrors.firstName}}error{{/studentErrors.firstName}}">
                </div>
                <div class="form-column">
                    <label for="studentLastName">Last Name:</label>
                    <input type="text" id="studentLastName" name="lastName" required class="{{#studentErrors.lastName}}error{{/studentErrors.lastName}}">
                </div>
                <div class="form-column">
                    <label for="studentId">Student ID:</label>
                    <input type="text" id="studentId" name="studentId" required class="{{#studentErrors.studentId}}error{{/studentErrors.studentId}}">
                </div>
            </div>

            <div class="form-row">
                <div class="form-column">
                    <label for="studentEmail">Email Address:</label>
                    <input type="email" id="studentEmail" name="email" required class="{{#studentErrors.email}}error{{/studentErrors.email}}">
                </div>
                <div class="form-column">
                    <label for="studentDepartment">Department:</label>
                    <input type="text" id="studentDepartment" name="department" required class="{{#studentErrors.department}}error{{/studentErrors.department}}">
                </div>
                <div class="form-column">
                    <label for="studentUsername">Username:</label>
                    <input type="text" id="studentUsername" name="username" required class="{{#studentErrors.username}}error{{/studentErrors.username}}">
                </div>
            </div>

            <div class="form-row">
                <div class="form-column">
                    <label for="studentPassword">Password:</label>
                    <input type="password" id="studentPassword" name="password" required class="{{#studentErrors.password}}error{{/studentErrors.password}}">
                </div>
                <div class="form-column">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required class="{{#studentErrors.confirmPassword}}error{{/studentErrors.confirmPassword}}">
                </div>
            </div>

            <button type="submit">Sign Up</button>
        </form>

        <form action="/admin/signup" method="post">
    <h2>Admin Signup</h2>
    <p>The email must include "@aluadmin.com" to register</p>
    {{#adminErrorMessage}}
        <p style="color: red;">{{adminErrorMessage}}</p>
    {{/adminErrorMessage}}

    <div class="form-row">
        <div class="form-column">
            <label for="adminFirstName">First Name:</label>
            <input type="text" id="adminFirstName" name="firstName" required class="{{#adminErrors.firstName}}error{{/adminErrors.firstName}}">
        </div>
        <div class="form-column">
            <label for="adminLastName">Last Name:</label>
            <input type="text" id="adminLastName" name="lastName" required class="{{#adminErrors.lastName}}error{{/adminErrors.lastName}}">
        </div>
        <div class="form-column">
            <label for="adminUsername">Username:</label>
            <input type="text" id="adminUsername" name="username" required class="{{#adminErrors.username}}error{{/adminErrors.username}}">
        </div>
    </div>

    <div class="form-row">
        <div class="form-column">
            <label for="adminEmail">Email:</label>
            <input type="email" id="adminEmail" name="email" required class="{{#adminErrors.email}}error{{/adminErrors.email}}">
        </div>
        <div class="form-column">
            <label for="adminPassword">Password:</label>
            <input type="password" id="adminPassword" name="password" required class="{{#adminErrors.password}}error{{/adminErrors.password}}">
        </div>
        <div class="form-column">
            <label for="confirmAdminPassword">Confirm Password:</label>
            <input type="password" id="confirmAdminPassword" name="confirmPassword" required class="{{#adminErrors.confirmPassword}}error{{/adminErrors.confirmPassword}}">
        </div>
    </div>

    <button type="submit">Sign Up</button>
</form>

    <button type="submit">Sign Up</button>
        </form>
    </section>

