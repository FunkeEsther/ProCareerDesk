<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Records</title>

    <!-- Include Font Awesome (replace the version number with the desired version) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Link to the external CSS file -->
    <link rel="stylesheet" href="/css/manageStudent.css">
</head>
<body>
<header>
        <h1>Admin Dashboard</h1>
        <a href="/admin_dashboard" class="logout-button">Go Back</a>
    </header>
    
    <a href="/addStudent" class="dashboard-button">Add Student</a>

    <!-- Table to display student records -->
    <!-- Table to display student records -->
<table>
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Department</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#students}}
        <tr>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{department}}</td>
            <td>{{username}}</td>
            <td>{{email}}</td>
            <td>
                <!-- Font Awesome icons for delete and modify actions -->
                <i class="fas fa-trash" onclick="deleteStudent('{{_id}}')" style="color: red;"></i>
                <a href="/modifyStudent/{{_id}}">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
        </tr>
        {{/students}}
    </tbody>
</table>


    <!-- Link to the external JavaScript file -->
    <script src="script.js"></script>

</body>
</html>
